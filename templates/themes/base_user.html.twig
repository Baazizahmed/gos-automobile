<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Mon Espace{% endblock %} - GOS-AUTOMOBILE</title>
    <meta name="description" content="{% block description %}Espace personnel GOS Automobile.{% endblock %}">
    
    {# On dit à Google de ne pas indexer les pages de l'espace privé #}
    <meta name="robots" content="noindex, nofollow">

    {# Google Fonts, Favicons, Font Awesome, Stylesheets, etc. #}
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap" rel="stylesheet">
    <link rel="icon" href="{{ asset('favicon.svg') }}">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="body-visitor d-flex flex-column min-vh-100">

    {# ========================================================== #}
    {#                 HEADER ET NAVIGATION                       #}
    {# ========================================================== #}
    <header>
        <nav class="navbar navbar-expand-lg bg-primary navbar-dark shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand brand-logo-font" href="{{ path('app_visitor_welcome') }}">GOS Automobile</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#userNavbar" aria-controls="userNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="userNavbar">
                    {% set current_route = app.request.attributes.get('_route') %}
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link {% if current_route == 'app_user_home' %}active{% endif %}" href="{{ path('app_user_home') }}">Accueil</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {% if current_route starts with 'app_user_profile' %}active{% endif %}" href="{{ path('app_user_profile_index') }}">Mon profil</a>
                        </li>
                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('app_admin_home') }}">Espace admin</a>
                            </li>
                        {% endif %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_visitor_welcome') }}">Retour au site</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_logout') }}">Déconnexion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    {# ========================================================== #}
    {#                       CONTENU PRINCIPAL                    #}
    {# ========================================================== #}
    <main class="flex-grow-1">
        {% block main %}{% endblock %}
    </main>

    {# ========================================================== #}
    {#                             FOOTER                         #}
    {# ========================================================== #}
    <footer class="bg-primary text-white mt-auto">
        <div class="container py-4">
            <div class="d-flex justify-content-between align-items-center">
                <span class="text-white-50">© {{ "now"|date("Y") }} GOS Automobile.</span>
                
            </div>
        </div>
    </footer>

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>