{% extends "themes/base_visitor.html.twig" %}

{% block title %}Page Introuvable (Erreur 404) - GOS Automobile{% endblock %}
{% block description %}La page que vous recherchez sur le site de GOS Automobile n'existe pas ou a été déplacée.{% endblock %}

{% block meta_robots %}
    <meta name="robots" content="noindex, follow">
{% endblock %}


{% block main %}
    <div class="container my-5">
        <div class="row">
            <div class="col-12 text-center">
                
              
                <div class="mb-5 mx-auto" style="max-width: 500px;">
                    <img src="/images/static/errors/404-illustration.png" class="img-fluid" alt="Page non trouvée">
                </div>

                
                <div>
                    <a href="{{ path('app_visitor_welcome') }}" class="btn btn-warning btn-lg shadow-sm">
                        <i class="fas fa-home me-2"></i>
                        Retourner à l'accueil
                    </a>
                </div>

            </div>
        </div>
    </div>
{% endblock %}