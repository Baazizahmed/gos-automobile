    <div class="container my-5">
    <h2 class="text-center mb-4">Filtrer par catégorie</h2>
    <div class="row text-center gap-3 gap-md-0">
            <div class="col-md-6">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Les prestations
                    </button>
                    <ul class="dropdown-menu">
                    
                        {% if categories is not empty %}
                            
                            {% for category in categories %}
                            {% set categoryPostsLength = category.posts|length %}
                               <li><a class="dropdown-item" href="{{path('app_visitor_prestations_index')}}">{{category.name}} ({{categoryPostsLength}} service{{categoryPostsLength > 1 ? 's': ''}}) </a></li>
                            {% endfor %}
                        {% else %}
                            <li><a class="dropdown-item" href="#">Aucune catégorie disponible</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
    </div>
    </div>
    


    {# ========================================================== #}
    {#                 LISTE DES PRESTATIONS (POSTS)              #}
    {# ========================================================== #}
    <div class="container">
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            
            {% for post in posts %}
                <div class="col">
                    <div class="card h-100 shadow-sm overflow-hidden">
                        <a href="#" class="text-decoration-none text-dark">
                            <div class="card-img-container">
                                {% if post.image %}
                                    <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('visitor_post_thumb') }}" class="card-img-top" alt="{{ post.title }}">
                                {% else %}
                                    <img src="{{ asset('/images/static/prestations/do-not-take-photos.png') }}" class="card-img-top" alt="{{ post.title }}">
                                {% endif %}
                            </div>
                            <div class="card-body">
                                <h5 class="card-title">{{ post.title }}</h5>
                                <p class="card-text text-muted">
                                    {{ post.description }}
                                </p>
                            </div>
                        </a>
                        <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center">
                             <span class="badge bg-primary-subtle text-primary-emphasis rounded-pill">
                                {{ post.category.name }}
                            </span>
                            <small class="text-muted">{{ post.publishedAt|ago }}</small>
                    <p>
                        <a href="#" class="btn btn-lg btn-primary shadow">Lire l'article</a>
                    </p>
                            
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        Aucune prestation ne correspond à cette catégorie pour le moment.
                    </div>
                </div>
            {% endfor %}
        </div>

        {# Pagination (si vous utilisez KNP Paginator) #}
        <div class="d-flex justify-content-center mt-5">
            {# {{ knp_pagination_render(posts) }} #}
        </div>
    </div>

{% endblock %}




