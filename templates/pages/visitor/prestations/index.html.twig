{% extends "themes/base_visitor.html.twig" %}

{% block title %}Nos Prestations - GOS Automobile{% endblock %}

{% block description %}Découvrez en détail toutes les prestations proposées par le garage GOS Automobile : mécanique, carrosserie, diagnostic et bien plus.{% endblock %}

{% block knp_paginator_rel_links %}
    {# rel links for pagination #}
    {{ knp_pagination_rel_links(posts) }}
{% endblock %}


{% block main %}

    <div class="container-fluid bg-primary text-white py-5">
        <div class="container">
            <h1 class="display-4 fw-bold">Nos Prestations</h1>
            <p class="lead">Un savoir-faire complet au service de votre véhicule.</p>
        </div>
    </div>

    <div class="container my-5">
        <h2 class="text-center mb-4">Filtrer par catégorie</h2>
        <div class="row text-center gap-3 gap-md-0 justify-content-center">
            <div class="col-md-6">
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Les prestations
                    </button>
                    <ul class="dropdown-menu">
                        {% if categories is not empty %}
                            {% for category in categories %}
                                {% set categoryPostsLength = category.posts|length %}
                                <li><a class="dropdown-item" href="{{path('app_visitor_prestations_filter_by_category', {'id':category.id, 'slug': category.slug})}}">{{category.name}} ({{categoryPostsLength}} service{{categoryPostsLength > 1 ? 's': ''}})</a></li>
                            {% endfor %}
                        {% else %}
                            <li><a class="dropdown-item" href="#">Aucune catégorie disponible</a></li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    {# ========================================================== #}
{#                 LISTE DES PRESTATIONS (POSTS)              #}
{# ========================================================== #}
<div class="container">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        
        {% for post in posts %}
            <div class="col">
                <div class="card h-100 shadow-sm">
                    
                   
                    <a href="#" class="text-decoration-none text-dark d-flex flex-column flex-grow-1">
                        
                        <div class="card-img-container">
                            {% if post.image %}
                                <img src="{{ vich_uploader_asset(post, 'imageFile') | imagine_filter('visitor_post_thumb') }}" class="card-img-top" alt="{{ post.title }}">
                            {% else %}
                                <img src="{{ asset('/images/static/prestations/do-not-take-photos.png') }}" class="card-img-top" alt="{{ post.title }}">
                            {% endif %}
                        </div>

                        <div class="card-body d-flex flex-column">
                           
                            <h5 class="card-title">{{post.title|u.truncate('60', '...')}}</h5>

                            <p class="card-text text-muted flex-grow-1">
                                {{post.description|u.truncate('80', '...')}}
                            </p>
                        </div>

                    </a>

                    <div class="card-footer bg-white border-top-0 d-flex justify-content-between align-items-center">
                        <span class="badge bg-primary-subtle text-primary-emphasis rounded-pill">
                            {{ post.category.name }}
                        </span>
                        
                       
                        <a href="{{path('app_visitor_prestations_post_show', {'id':post.id, 'slug':post.slug})}}" class="btn btn-sm btn-outline-primary">Détails</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center">Aucune prestation à afficher.</div>
            </div>
        {% endfor %}

        
    </div>
    {# display navigation #}
        <div class="d-flex justify-content-end align-items-center">
            {{ knp_pagination_render(posts) }}
        </div>
</div>
{% endblock %}




