{% extends "themes/base_admin.html.twig" %}

{% block title %}Créer un nouvel utilisateur{% endblock %}

{% block description %}Créer un nouvel utilisateur{% endblock %}

{% block main %}
    
    <div class="text-center pt-3 pb-2 mb-4 border-bottom">
        <h1>Créer un nouvel administrateur</h1>
    </div>
    <div class="container mt-4">
        <div class="row">

            <div class="col-md-8 mx-auto">

                

                <div class="card shadow-sm">
                    <div class="card-body">

                        
                        {{ form_start(form) }}


                            <div class="row">
                            <div class="col-lg-6 mb-3">
                                <label for="form_firstName">Prénom <span class="text-danger">*</span></label>
                                <div class="text-danger">{{ form_errors(form.firstName) }}</div>
                                {{ form_widget(form.firstName,{'attr': {'class':'form-control','autofocus':'autofocus'}}) }}
                            </div>
                            <div class="col-lg-6 mb-3">
                                <label for="form_lastName">Nom <span class="text-danger">*</span></label>
                                <div class="text-danger">{{ form_errors(form.lastName) }}</div>
                                {{ form_widget(form.lastName,{'attr': {'class':'form-control'}}) }}
                            </div>

                            </div>
                            <div class="row">
                                <div class="col-lg-12 mb-3">
                                    <label for="form_email">Email <span class="text-danger">*</span></label>
                                    <div class="text-danger">{{ form_errors(form.email) }}</div>
                                    {{ form_widget(form.email,{'attr': {'class':'form-control'}}) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12 mb-3">
                                    <label for="form_password_first">Mot de passe <span class="text-danger">*</span></label>
                                    <div class="text-danger">{{ form_errors(form.plainPassword.first) }}</div>
                                    {{ form_widget(form.plainPassword.first,{'attr': {'class':'form-control', 'placeholder': 'Au moin 12 caractères'}})}}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-12 mb-3">
                                    <label for="form_password_second">Confirmation de mot de passe
                                        <span class="text-danger">*</span>
                                    </label>
                                    <div class="text-danger">{{ form_errors(form.plainPassword.second) }}</div>
                                    {{ form_widget(form.plainPassword.second,{'attr': {'class':'form-control'}}) }}
                                </div>
                            </div>

                            <div>
                                <input formnovalidate type="submit" class="btn btn-primary w-100 shadow" value="Créer l'utilisateur">
                            </div>


                            {# <div class="d-flex justify-content-start mt-4">
                                <button type="submit" class="btn btn-primary shadow">Créer l'utilisateur</button>
                                <a href="{{ path('app_admin_user_index') }}" class="btn btn-secondary ms-2">Annuler</a>
                            </div> #}

                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}